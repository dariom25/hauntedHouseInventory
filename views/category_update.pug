extends layout

block content
    h2 #{title}

    form(method="POST")
        div.form-group
            label(for="name") Name:
            input#name(type="text", placeholder="Name of item" name="name" required value=(undefined===category ? "" : category.name))
        div.form-group
            label(for="password") Secret password:
            input#password(name="password", required, type="text")
        button(type="submit") Submit
    if errors
        ul 
            for error in errors 
                li!= error.msg